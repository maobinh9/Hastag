<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_background_viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/manga" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D9404040" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="142dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/manga" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_view_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    android:text="Martial Peak others"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/image_view_user"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/user"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_name" />

                <TextView
                    android:id="@+id/text_view_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:text="Momo"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toEndOf="@id/image_view_user"
                    app:layout_constraintTop_toBottomOf="@id/text_view_name" />

                <ImageView
                    android:id="@+id/image_view_eyes"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/eye"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_author" />

                <TextView
                    android:id="@+id/text_view_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:text="14.1"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toEndOf="@id/image_view_eyes"
                    app:layout_constraintTop_toBottomOf="@id/text_view_author" />

                <ImageView
                    android:id="@+id/image_favorite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/favorite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_views" />

                <ImageView
                    android:id="@+id/image_notifications"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/notifications"
                    app:layout_constraintStart_toEndOf="@id/image_favorite"
                    app:layout_constraintTop_toBottomOf="@id/text_view_views" />

                <ImageView
                    android:id="@+id/image_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/share"
                    app:layout_constraintStart_toEndOf="@id/image_notifications"
                    app:layout_constraintTop_toBottomOf="@id/text_view_views" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>